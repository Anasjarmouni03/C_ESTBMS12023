#include<stdio.h>
#include<stdlib.h>
#include<math.h>

// Exrecise 01 : Binary too Decimal

void main()
{
    int iB , iD , i , R , Copie ;

    printf("Entrer l'information Binaire \n");
    scanf("%d",&iB); 

    Copie = iB ; i = 0 ;
    while (Copie != 0 )
    {
        R = Copie % 10 ; 
        iD = iD + R*pow(2,i);
        i ++ ;
        Copie = Copie / 10 ;
    }

